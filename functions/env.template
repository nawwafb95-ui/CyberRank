# Firebase Cloud Functions Environment Variables
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: The .env file is in .gitignore and will not be committed.
# Each developer must create their own .env file.

# Resend API Key for sending emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# From email address (must be verified in Resend)
# For testing, you can use: onboarding@resend.dev (pre-verified by Resend)
# For production, use a verified domain email (e.g., noreply@yourdomain.com)
FROM_EMAIL=noreply@yourdomain.com

# Optional: Comma-separated list of allowed CORS origins
# Default: Allows any localhost origin
# Example: ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
# ALLOWED_ORIGINS=

# OTP Feature Flag - OTP temporarily disabled â€“ can be re-enabled by setting OTP_ENABLED = true
# When disabled: Skip OTP generation, skip email sending, auto-verify all requests
# Set to "true" to enable OTP verification (requires RESEND_API_KEY and FROM_EMAIL)
# Default: false (OTP disabled)
OTP_ENABLED=false

