rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (safe)
    function isAdmin() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ==================== USERS ====================
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // ==================== QUESTIONS ====================
    match /questions/{questionId} {
      // Authenticated users can read questions
      allow read: if isAuthenticated();

      // Only admins can create, update, or delete questions
      allow create, update, delete: if isAdmin();
    }

    // ==================== ATTEMPTS ====================
    match /attempts/{attemptId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }

    // ==================== RESULTS ====================
    match /results/{resultId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (request.auth.uid == resource.data.uid || isAdmin());
    }

    // ==================== USERSTATS (ðŸ”§ MODIFIED FOR LEADERBOARD) ====================
    match /userStats/{uid} {
      // âœ… Any logged-in user can read stats (for leaderboard)
      allow read: if isAuthenticated();

      // Users can create their own stats
      allow create: if isAuthenticated() && request.auth.uid == uid;

      // Users update their own stats, admins update all
      allow update: if isAuthenticated() && (request.auth.uid == uid || isAdmin());

      // Only admins can delete stats
      allow delete: if isAdmin();
    }

    // ==================== SCORES ====================
    match /scores/{uid} {
      allow read: if isAuthenticated() && (request.auth.uid == uid || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == uid;
      allow update: if isAuthenticated() && (request.auth.uid == uid || isAdmin());
      allow delete: if isAdmin();
    }

    // ==================== POINTTRANSACTIONS ====================
    match /pointTransactions/{txId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // ==================== USERPROGRESS ====================
    match /userProgress/{uid} {
      // Users can read/write only their own progress, admins can read all
      allow read: if isAuthenticated() && (request.auth.uid == uid || isAdmin());
      allow create, update: if isAuthenticated() && request.auth.uid == uid;
      allow delete: if isAdmin();
    }
  }
}
